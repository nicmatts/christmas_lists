<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class = "person new">
  <h2>Edit Person</h2>

  <%= form_for(:person, :url => {:action => 'update', :id => @person.id}) do |f| %>

  <!--:f is what the partial template is using, f is what this layout uses -->
  <%= render(:partial => "form", :locals => {:f => f}) %>

  <div class="form buttons btn">
    <%= submit_tag("Edit person", :class => 'btn') %>
  </div>

  <% end %>
</div>